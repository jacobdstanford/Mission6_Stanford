@model Mission6_Stanford.Models.Movie

@{
    ViewData["Title"] = "Add a Movie";
}

<h1>Add a New Movie</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="CategoryID" class="form-label">Category</label>
        <input asp-for="CategoryID" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label">Year</label>
        <input asp-for="Year" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label">Director</label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating</label>
        <select asp-for="Rating" class="form-select" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Edited" class="form-label">Edited</label>
        <select asp-for="Edited" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="LentTo" class="form-label">Lent To</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes (max 25 characters)</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>

    <button type="submit" class="btn btn-success">Add Movie</button>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>