@model IEnumerable<Mission6_Stanford.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="container mt-4">
    <h1 class="text-center my-4">The Movie Collection</h1>

    <!-- âœ… Add Movie Button -->
    <p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add a New Movie
        </a>
    </p>


    <table class="table table-striped table-hover table-bordered shadow">
        <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Copied to Plex</th>
            <th class="text-center">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.CategoryID</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@(movie.Edited ? "Yes" : "No")</td>
                <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-outline-primary btn-sm">
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-outline-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this movie?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>