@model IEnumerable<Mission6_Stanford.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>The Movie Collection</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add a New Movie</a>
</p>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Lent To</th>
        <th>Notes</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Category</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@(movie.Edited.HasValue ? (movie.Edited.Value ? "Yes" : "No") : "N/A")</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
        </tr>
    }
    </tbody>
</table>