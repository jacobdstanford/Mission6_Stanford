@model Mission6_Stanford.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<h2>Edit Movie</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MovieId" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="CategoryID" class="form-label">Category</label>
        <input asp-for="CategoryID" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label">Year</label>
        <input asp-for="Year" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label">Director</label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating</label>
        <select asp-for="Rating" class="form-select" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CopiedToPlex" class="form-label">Copied to Plex</label>
        <select asp-for="CopiedToPlex" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>